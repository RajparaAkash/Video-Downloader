<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity.WaStatusPreviewActivity">

    <ImageView
        android:id="@+id/waPreview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_8"
        android:padding="14dp"
        android:src="@drawable/back_arrow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:gravity="end"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/waPreview_save_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@drawable/background_6"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:text="Save"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_33sdp"
                android:background="@drawable/background_5"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/status_save_image"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/waPreview_share_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@drawable/background_6"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:text="Share"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_33sdp"
                android:background="@drawable/background_5"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/share_image"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/waPreview_repost_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@drawable/background_6"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:text="Repost"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_33sdp"
                android:background="@drawable/background_5"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/whatsapp_status_share_image"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/waPreview_videoplay_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_8"
        android:src="@drawable/status_video_play_image" />


</RelativeLayout>